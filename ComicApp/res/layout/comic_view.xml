<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
   	android:background="#d0329999"
    android:paddingLeft="10dip"
    android:paddingRight="10dip"
    android:paddingTop="10dip"
    android:paddingBottom="10dip"
    xmlns:app="http://schemas.android.com/apk/res/tw.edu.ntu.mobilehero">
    
    <greendroid.widget.AsyncImageView
        android:id="@+id/comic_1"
        android:layout_width="160dip"
        android:layout_height="120dip"
        android:scaleType="fitXY"
        />
    <greendroid.widget.AsyncImageView
        android:id="@+id/comic_2"
        android:layout_toRightOf="@id/comic_1"
        android:layout_marginLeft="5dip"
        android:layout_width="160dip"
        android:layout_height="120dip"
        android:scaleType="fitXY"
        />
    <greendroid.widget.AsyncImageView
        android:id="@+id/comic_3"
        android:layout_below="@id/comic_1"
        android:layout_marginTop="5dip"
        android:layout_width="160dip"
        android:layout_height="120dip"
        android:scaleType="fitXY"
        />
    <greendroid.widget.AsyncImageView
        android:id="@+id/comic_4"
        android:layout_toRightOf="@id/comic_3"
        android:layout_below="@id/comic_2"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="5dip"
        android:layout_width="160dip"
        android:layout_height="120dip"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/comic_number"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_centerInParent="true"
        android:src="@drawable/number"/>
    
</RelativeLayout>